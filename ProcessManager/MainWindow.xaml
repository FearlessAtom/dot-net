<Window x:Class="ProcessManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProcessManager"
        mc:Ignorable="d"
    Title="ProcessManager" Height="450" Width="800"
    MinWidth="800" MinHeight="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="75"/>
        </Grid.ColumnDefinitions>

        <DataGrid x:Name="MainDataGrid" ItemsSource="{Binding}" AutoGenerateColumns="False" FontSize="20"
            Grid.Column="0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Memory"  Binding="{Binding Memory}"/>
                <DataGridTextColumn Header="StartTime"  Binding="{Binding StartTime}"/>
                <DataGridTextColumn Header="Count of threads"  Binding="{Binding CountOfThreads}"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Column="1" x:Name="ApplicationsStackPanel"></StackPanel>
    </Grid>
</Window>

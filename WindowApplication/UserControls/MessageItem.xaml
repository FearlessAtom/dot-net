<UserControl x:Class="WindowApplication.UserControls.MessageItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowApplication.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border  Margin="0 0 0 5" x:Name="MainBorder"  HorizontalAlignment="Left">
        <StackPanel>
            <TextBlock Padding="5 5 5 0"  FontSize="15" FontFamily="Verdana" VerticalAlignment="Bottom" x:Name="UsernameTextBlock" HorizontalAlignment="Right"></TextBlock>
            
            <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal" Background="Transparent">
                <TextBlock VerticalAlignment="Bottom" Padding="5" FontSize="10" FontFamily="Verdana"
                    x:Name="DateTextBlock"></TextBlock>
                <TextBlock TextWrapping="Wrap" FontSize="20" Padding="5 0 5 5" FontFamily="Verdana"
                    x:Name="MessageContentTextBlock"></TextBlock>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>

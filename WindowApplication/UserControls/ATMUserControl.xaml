<UserControl Background="LightSteelBlue" x:Class="WindowApplication.UserControls.ATMUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel
            Grid.Column="2"
            Grid.Row="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            VerticalAlignment="Bottom">
            <TextBlock
                FontFamily="Verdana"
                FontSize="40"
                HorizontalAlignment="Center"
                Text="ATM"
                VerticalAlignment="Center"
                x:Name="NameTextBlock">
                Bank
            </TextBlock>
            <Image
                Height="75"
                Margin="5"
                Source="../Data/Images/Icons/atm.png"
                Width="75"
                x:Name="LogoPath" />
        </StackPanel>
        <Button
            FontSize="30"
            BorderBrush="Black"
            BorderThickness="1"
            Grid.Row="7"
            Grid.Column="5"
            Click="Deposit"
            Margin="5"
            Background="AliceBlue"
        >Deposit</Button>
        <Button
            FontSize="30"
            BorderBrush="Black"
            BorderThickness="1"
            Grid.Row="6"
            Grid.Column="5"
            Click="Withdraw"
            Margin="5"
            Background="AliceBlue"
        >Cash withdrawal</Button>
        <Button
            Grid.Column="5"
            FontSize="30"
            BorderBrush="Black"
            BorderThickness="1"
            Grid.Row="8"
            Click="Transfer"
            Margin="5"
            Background="AliceBlue"
        >Transfer Cash</Button>
        <Button
            Grid.Column="0"
            FontSize="30"
            BorderBrush="Black"
            BorderThickness="1"
            Grid.Row="8"
            Click="ViewBalance"
            Margin="5"
            Background="AliceBlue"
        >View Balance</Button>
        <Button
            Grid.Column="0"
            FontSize="30"
            BorderBrush="Black"
            BorderThickness="1"
            Grid.Row="10"
            Click="Close"
            Margin="5"
            Background="AliceBlue"
        >Back</Button>
        
        <TextBlock HorizontalAlignment="Center" Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="4" x:Name="MessageTextBlock" FontSize="30" Foreground="DarkRed"></TextBlock>
        
        <!-- <Border BorderBrush="Black" BorderThickness="1" Background="AliceBlue" Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2"> -->
        <!--     <Grid> -->
        <!--         <Grid.RowDefinitions> -->
        <!--             <RowDefinition Height="*"></RowDefinition> -->
        <!--         </Grid.RowDefinitions> -->
        <!--          -->
        <!--         <TextBlock FontFamily="Verdana" FontSize="20" x:Name="CardNumberTextBlock"></TextBlock> -->
        <!--     </Grid> -->
        <!-- </Border> -->
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
    </Grid>
</UserControl>
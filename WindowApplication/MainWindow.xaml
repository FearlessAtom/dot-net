<Window x:Class="WindowApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowApplication"
        mc:Ignorable="d" MinWidth="600" MinHeight="400"
        Title="Chat" Height="700" Width="600">
    <Border Padding="5">
        <Grid x:Name="MainGrid">
            <StackPanel Width="300" HorizontalAlignment="Center" VerticalAlignment="center">
                <TextBlock FontFamily="Verdana" Margin="0 0 0 10" HorizontalAlignment="Center" FontSize="30"
                    Text="Username"></TextBlock>
                <TextBox FontFamily="Verdana" Margin="0 0 0 10" FontSize="30" x:Name="UsernameTextBox" ></TextBox>
                <Button BorderThickness="2" Background="White" FontFamily="Verdana" FontSize="30"
                    Content="Connect" x:Name="ConnectButton"></Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
